<!DOCTYPE HTML>
<html lang="en">
<head>
	<meta name="description" content="{{ shop.description }}">
	<meta name="author" content="Bootic">
	<meta charset="utf-8">
    {{ 'main.css' | asset_url | stylesheet_tag }}
    <title>{% current_title %} - {{ shop.name }}</title>
</head>

<body class="{{ template }}">
    {% include 'header' %}
    {{ content_for_layout }}
    {% include 'footer' %}
    <!-- javascript -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="{{ 'jquery-1.11.1.min.js' | asset_url }}"><\/script>')</script>
    {{ 'main.js' | asset_url | javascript_tag }}

</body>
</html>
